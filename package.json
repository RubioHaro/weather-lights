{
  "name": "weather-lights-repo",
  "private": true,
  "scripts": {
    "start:api": "npm run start:dev --workspace=apps/api",
    "start:web": "npm run dev --workspace=apps/web",
    "dev": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "test": "npm test --workspaces",
    "install:all": "npm install"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "axios": "^1.13.5"
  }
}
